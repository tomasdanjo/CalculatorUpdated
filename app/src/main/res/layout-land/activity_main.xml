<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center|right"
        >

        <TextView
            android:id="@+id/result"
            android:layout_width="375dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:fontFamily="sans-serif"
            android:gravity="top|left"
            android:text="0"
            android:textColor="@color/grey"
            android:textSize="76sp" />

        <LinearLayout
            android:id="@+id/nums"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_margin="0dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ac"
                    style="@style/Button3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="AC"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/flipSign"
                    style="@style/Button3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="+/-"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/percent"
                    style="@style/Button3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="%"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/divide"
                    style="@style/Button1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="/"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp">

                </Button>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/num7"
                    style="@style/Button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/num8"
                    style="@style/Button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/num9"
                    style="@style/Button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/multiply"
                    style="@style/Button1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="x"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp">

                </Button>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/num4"
                    style="@style/Button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"

                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/num5"
                    style="@style/Button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/num6"
                    style="@style/Button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/minus"
                    style="@style/Button1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="-"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp">

                </Button>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/num1"
                    style="@style/Button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/num2"
                    style="@style/Button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="2"

                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:visibility="visible">

                </Button>

                <Button
                    android:id="@+id/num3"
                    style="@style/Button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/plus"
                    style="@style/Button1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp">

                </Button>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/backspace"
                    style="@style/Button3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="del"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/num0"
                    style="@style/Button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/period"
                    style="@style/Button2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="."
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/equals"
                    style="@style/Button1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:fontFamily="sans-serif-thin"
                    android:text="="
                    android:textColor="#FFFFFF"
                    android:textSize="20dp">

                </Button>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>

